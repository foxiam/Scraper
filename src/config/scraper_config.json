{
    "target_directory": "./pages",
    "string_width": 80,
    "href_template": "%url_text% [%url_href%]",
    "header_template": "%header%\n\n",
    "article_template": "%article%\n",
    "paragraph_template": "%paragraph%\n\n",

    "tag_processing_setup": {
        "default": {
            "tags_for_delete": [
                "script", "noscript", "style", "noindex",
                "form", "img", "figcaption"
            ],
            "class_attrs_for_delete": [
                "social", "reg", "auth", "footer",
                "banner", "mobile", "comment", "preview",
                "inject", "incut", "infoblock"
            ],
            "tags_for_search": ["h2", "p"],
            "class_attrs_for_search": [
                "content","context", "article", "text"
            ]
        },

        "example.com": {
            "tags_for_delete": [],
            "class_attrs_for_delete": [],
            "tags_for_search": ["h2", "p", "font"],
            "class_attrs_for_search": []
        },

        "habr.com": {
            "tags_for_delete": [],
            "class_attrs_for_delete": [
                "tm-article-presenter__meta"
            ],
            "tags_for_search": ["p"],
            "class_attrs_for_search": [
                "tm-article-body"
            ]
        }
    }
}